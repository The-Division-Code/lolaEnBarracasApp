<%- include('partials/head.ejs') %> 
<%- include('partials/header.ejs') %> 
<div>
    <div class="container-fluid justify-content-center">
      <div class="row">
        <% productsList.forEach(product=>{ %>
          <% if (product.stock !== 0){ %>
           
          
          <div class="card col-3" style="width: 18rem;">
            <img class="card-img-top" src="/images/index.jpg" alt="Card image cap"
              style="max-height: 12rem;">
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= product.category %> </li>
                <li class="list-group-item"> <%= product.name %>  </li>
                <li class="list-group-item"> color  </li>
                <li class="list-group-item"> $<%= product.price %>  </li>
              </ul>
  
              <a href="" data-toggle="modal" data-target="#exampleModal2"> <button
                  class="btn-primary fa fa-edit"></button></a>
              <button type="submit" class="btn-danger fa fa-trash" onclick="confirmacion('archivar');"></button>
            </div>
          </div>
          <% } %>
        <% }) %> 
      </div>
    </div>
  </div>

  <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" style="max-width: 80%!important;">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel2">Editar productos</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="card">
            <img class="rounded mx-auto d-block" src="/images/index.jpg" alt="Card image cap">

            <div class="card-body">
              <form>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><input type="file" name="" id=""></li>
                  <li class="list-group-item"> <input type="text" value="Zapatos"></li>
                  <li class="list-group-item"> <input type="text" value="Morrison"></li>
                  <li class="list-group-item"> <input type="text" value="Negros"></li>
                  <li class="list-group-item"> <input type="number" value="3500"></li>
                </ul>

                <button type="reset" class="btn btn-secondary">Deshacer cambios</button>
                <button type="button" class="btn btn-success">Guardar cambios</button>
              </form>
            </div>
          </div>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer.ejs') %> 