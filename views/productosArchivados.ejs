<%- include('partials/head.ejs') %>
  <%- include('partials/header.ejs') %>
    <div>
      <h2>Productos archivados</h2>
      <div class="container-fluid justify-content-center">
        <div class="row">
          <% productsList.forEach(product=>{ %>
            <% if (product.stock===0){ %>

              <div class="card col-3" style="width: 18rem;">
                <img class="card-img-top" src="/images/index.jpg" alt="Card image cap" style="max-height: 12rem;">
                <div class="card-body">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                      <%= product.category %>
                    </li>
                    <li class="list-group-item">
                      <%= product.name %>
                    </li>
                    <li class="list-group-item"> Color</li>
                  </ul>
                  <form action="/administrar/archivados?_method=PUT" method="POST">
                    <input name="id" id="id" class="d-none" type="text" value="<%= product.id %>">
                    <button type="submit" class="btn btn-success">Restaurar</button>
                  </form>
                  <button type="submit" class="btn btn-danger" onclick="confirmacion('eliminar');">Eliminar
                    definitivamente</button>
                </div>
              </div>
              <% } %>
                <% }) %>
        </div>
      </div>
    </div>
    <%- include('partials/footer.ejs') %>