      <div>
  
        <div class="row">
  
          <div class="col-4">
  
            <div class="row justify-content-around">
  
              <h3>Busqueda de Productos</h3>
              <form action="" class=" col-12" ">
  
                <div class="row justify-content-around">

                  <div class="form-group col-12">
  
                    <select name="models" id="models" class="col-12 form-group" onchange="findColorsByModel(); findWaistsByModel();">
                      <option value="" disabled selected>Elija un modelo...</option>
                      <% for( let i = 0; i < productos.length; i++ ) { %>
                        <% if (productos.stock !== 0) { %>
                          <option value="<%=productos[i].id %>"> <%= productos[i].name %>  </option>
                        <% } %>
                      <% } %>
                    </select>
                  </div>
  
  
                  <div class="form-group col-12">
  
                    <select name="colors" id="colors" class="col-12 form-control">
  
                      <option value="" disabled selected>Selecciona un color...</option>
                     
                    </select>
                  </div>
  
                  <div class="form-group col-12">
  
                    <select name="waists" id="waists" class="col-12 form-control">
  
                      <option value="" disabled selected>Selecciona un talle...</option>
                      
                    </select>
                  </div>
  
                  <button type="reset" class="btn btn-danger col-5">Borrar</button>
  
                  <button type="button" class="btn btn-primary col-5" onclick="searchProduct2();">Buscar</button>
  
                </div>
              </form>
            </div>
          </div>
  
          <div class="container-fluid col-8" id="result">
  
            <h3>Resultado</h3>
  
            
            <a href="#" class="btn btn-primary" id="addButton">Agregar</a>
          </div>
  
        </div>
      </div>

